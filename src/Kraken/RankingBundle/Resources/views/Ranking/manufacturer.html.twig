{% extends 'KrakenRankingBundle::base.html.twig' %}

{% block headline %}{{ manufacturer.name }}{% endblock headline %}

{% block content_row %}
<div class="row">
    <div class="col-sm-4">
        <form class="form-horizontal" method="POST" action="{{ url('ranking_search')}}">
            {{ form_rest(form) }}
            <button type="submit" class="btn btn-primary">Szukaj</button>
        </form>
    </div>
    <div class="col-sm-8">
        {% include('KrakenRankingBundle:Ranking:boilerList.html.twig') with {boilers: boilers} %}
    </div>
</div>
{% endblock content_row %}
